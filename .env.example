# Since .env is gitignored, you can use .env.example to build a new `.env` file when you clone the repo.
# Keep this file up-to-date when you add new variables to \`.env\`.

# This file will be committed to version control, so make sure not to have any secrets in it.
# If you are cloning this repo, create a copy of this file named `.env` and populate it with your secrets.

# Feature Flags
# Used to enable/disable features
NEXT_PUBLIC_FLAG_AUTH=false      # Enable/disable authentication
NEXT_PUBLIC_FLAG_COMMENTS=false  # Enable/disable comment system
NEXT_PUBLIC_FLAG_CONTACT=false   # Enable/disable contact form
NEXT_PUBLIC_FLAG_TURNSTILE=false # Enable/disable Cloudflare Turnstile

# Resend
# Used for the contact form (required if NEXT_PUBLIC_FLAG_CONTACT=true)
# @see https://resend.com
EMAIL_FROM=contact@example.com
EMAIL_TO="personal@personal.com"
RESEND_API_KEY="re_xyzabc..."

# Cloudflare Turnstile
# Used to protect your site from bad bots (required if NEXT_PUBLIC_FLAG_TURNSTILE=true)
# @see https://www.cloudflare.com/products/bot-management/
NEXT_PUBLIC_TURNSTILE_SITE_KEY="0x..."
TURNSTILE_SECRET_KEY="0x..."

# Database URL
# The database URL is used to connect to your database. Required for comments and authentication.
# Required if NEXT_PUBLIC_FLAG_AUTH=true or NEXT_PUBLIC_FLAG_COMMENTS=true
DATABASE_URL='postgresql://neondb_owner:'

# Authentication (required if NEXT_PUBLIC_FLAG_AUTH=true)
# You can generate the secret via 'openssl rand -base64 32' on Unix
# @see https://www.better-auth.com/docs/installation
BETTER_AUTH_URL=''
BETTER_AUTH_SECRET=''

# Preconfigured Google OAuth provider, works out-of-the-box
# @see https://www.better-auth.com/docs/authentication/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Preconfigured Github OAuth provider, works out-of-the-box
# @see https://www.better-auth.com/docs/authentication/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Contact Form
NEXT_PUBLIC_CONTACT_FORM_ENABLED="true"
NEXT_PUBLIC_CONTACT_AUTH_ENABLED="true"
